<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="AllGroupsSuite">

    <test name="SmokeTests">
        <parameter name="searchKeyword" value="java"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="TASKassignment.AmazonGroupTest"/>
        </classes>
    </test>

    <test name="RegressionTests">
        <parameter name="searchKeyword" value="selenium"/>
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="TASKassignment.AmazonGroupTest"/>
        </classes>
    </test>

    <test name="ApiTests">
        <parameter name="searchKeyword" value="rest api"/>
        <groups>
            <run>
                <include name="api"/>
            </run>
        </groups>
        <classes>
            <class name="TASKassignment.AmazonGroupTest"/>
        </classes>
    </test>

</suite>
